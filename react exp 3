js code :
// Base class: Person
class Person {
  constructor(name, age) {
    this.name = name;
    this.age = age;
  }

  displayInfo() {
    return `Name: ${this.name}, Age: ${this.age}`;
  }
}

// Subclass: Student
class Student extends Person {
  constructor(name, age, course) {
    super(name, age); // Call parent constructor
    this.course = course;
  }

  // Override method
  displayInfo() {
    return `${super.displayInfo()}, Course: ${this.course}`;
  }
}

// Subclass: Teacher
class Teacher extends Person {
  constructor(name, age, department) {
    super(name, age);
    this.department = department;
  }

  // Override method
  displayInfo() {
    return `${super.displayInfo()}, Department: ${this.department}`;
  }
}

// Create instances
const student1 = new Student("Alice", 20, "Computer Science");
const teacher1 = new Teacher("Mr. Smith", 40, "Mathematics");

// Demonstration
console.log("---- Student Info ----");
console.log(student1.displayInfo());

console.log("---- Teacher Info ----");
console.log(teacher1.displayInfo());
